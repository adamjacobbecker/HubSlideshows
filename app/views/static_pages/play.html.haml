%html{lang: "en"}
%head
  %title Hub Slideshow
  = stylesheet_link_tag "application", media: "all"
  
%body.impress-not-supported
  .fallback-message
    Sorry, not a great browser.
  
  #impress
    .step.slide{"data-x" => "-1000", "data-y" => "-1500"}
      Aren't you just bored with all these presentations?
    
    .step.slide{"data-x" => "0", "data-y" => "-1500"}
      UYes I am bored>?
      
    .step{"data-x" => "3000", "data-y" => "1500", "data-scale" => "10"}
      

  .hint
    %p Use a spacebar or arrow keys to navigate
    :javascript
      if ("ontouchstart" in document.documentElement) { 
          document.querySelector(".hint").innerHTML = "<p>Tap on the left or right to navigate</p>";
      }
    
    = javascript_include_tag "application"
    :javascript
      impress().init();