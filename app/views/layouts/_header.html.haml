.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand{href: '#'} Hub Slideshows
      .nav-collapse
        %ul.nav
          %li.active
            %a{href: '#'} Home
        %ul.nav.pull-right
          %li
            - if signed_in?
              %li.dropdown
                %a.dropdown-toggle{ href: "#", :"data-toggle" => "dropdown" }
                  = current_hub.name
                  %b.caret  
                %ul.dropdown-menu
                  %li
                    = link_to 'Sign out', signout_path, method: :delete
            - else
              = link_to 'Sign in', signin_path
